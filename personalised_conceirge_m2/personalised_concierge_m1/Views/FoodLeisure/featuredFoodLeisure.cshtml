@using personalised_concierge_m1.Models.Entities.FoodLeisureServices
@model dynamic


@{}

<!DOCTYPE html>
<html>

<body>
    <div>this is the number of items with featured as true: @Model.Count</div>
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" <ol class=" carousel-indicators">
            @* @for (int i = 0; i < Model.Count; i++)
                {
                <li data-target="#carouselExampleCaptions" data-slide-to="i"></li>
                } *@
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active w-100 p-5">
                <img src=@Url.Content(@Model[0].foodleisure_image) class=" d-block w-100 h-100" alt="@Model[0].name">
                <div class="carousel-caption d-none d-md-block"
                    style="background-color: grey; color: blue; opacity: 0.8;">
                    <h5>@Model[0].name</h5>
                    <p>@Model[0].description</p>
                </div>
            </div>
            @for (int i = 1; i < Model.Count; i++)
            {
                <div class="carousel-item w-100 p-5">
                    <img src=@Url.Content(@Model[i].foodleisure_image) class="d-block w-auto h-auto" alt="@Model[i].name">
                    <div class="carousel-caption d-none d-md-block"
                    style="background-color: grey; color: blue; opacity: 0.8;">
                        <h5>@Model[i].name</h5>
                        <p>@Model[i].description</p>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleCaptions" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            @* <span class="sr-only">Previous</span> *@
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleCaptions" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            @* <span class="sr-only">Next</span> *@
        </button>
    </div>

</body>

</html>