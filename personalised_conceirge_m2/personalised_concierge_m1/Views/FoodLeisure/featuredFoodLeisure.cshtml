@using personalised_concierge_m1.Models.Entities.FoodLeisureServices
@model dynamic


@{}

<!DOCTYPE html>
<html>

<body>
    <div>this is the number of items with featured as true: @Model.Count</div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            @for (int i = 1; i < Model.Count; i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="i"></li>
            }
        </ol>
        @* First item, set as active to be displayed first *@
        <div class="carousel-inner">
            <div class="carousel-item active">
                @using (Html.BeginForm("SpecificFoodLeisure", "FoodLeisure"))
                {
                    <input type="hidden" name="FoodLeisureID" value="@Model[0].foodleisure_id" />
                    <img class="d-block w-100" style="object-fit: contain;" src=@Url.Content(@Model[0].foodleisure_image)
                    alt="First slide">
                    <div class="carousel-caption d-none d-md-block" style="background-color: grey; opacity: 0.8;">
                        <a style="font-weight:bold; font-size:30px" class="nav-link text-dark">
                            <input type="submit" style="border: none; background-color: transparent"
                            value="@Model[0].name" />
                        </a>
                        <p style="font-size:20px">@Model[0].description</p>
                    </div>
                }
            </div>
            @* for loop to go through the rest of the featured items to be displayed *@
            @for (int i = 1; i < Model.Count; i++)
            {
                <div class="carousel-item">
                    @using (Html.BeginForm("SpecificFoodLeisure", "FoodLeisure"))
                    {
                        <input type="hidden" name="FoodLeisureID" value="@Model[i].foodleisure_id" />
                        <img class="d-block w-100" src=@Url.Content(@Model[i].foodleisure_image) alt="@Model[i].name">
                        <div class="carousel-caption d-none d-md-block" style="background-color: grey; opacity: 0.8;">
                            <a style="font-weight:bold; font-size:30px" class="nav-link text-dark">
                                <input type="submit" style="border: none; background-color: transparent"
                            value="@Model[i].name" />
                            </a>
                            <p>@Model[i].description</p>
                        </div>
                    }
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</body>

</html>