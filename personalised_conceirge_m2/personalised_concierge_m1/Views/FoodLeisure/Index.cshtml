@using personalised_concierge_m1.Models.Entities.FoodLeisureServices
@model dynamic

@{}

<!DOCTYPE html>
<html>

<body>

    <h1 style="color: #0b65a1;" >Trip Planner Home</h1>

    <!---Banner Start-->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            @for (int i = 1; i < Model.featuredFoodLeisure.Count; i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="i"></li>
            }
        </ol>
        @* First item, set as active to be displayed first *@
        <div class="carousel-inner">
            <div class="carousel-item active">
                @using (Html.BeginForm("SpecificFoodLeisure", "FoodLeisure"))
                {
                    <input type="hidden" name="FoodLeisureID" value="@Model.featuredFoodLeisure[0].foodleisure_id" />
                    <img class="d-block w-100" style="object-fit: contain;" src=@Url.Content(@Model.featuredFoodLeisure[0].foodleisure_image)
                         alt="First slide">
                    <div class="carousel-caption d-none d-md-block" style="background-color: grey; opacity: 0.8;">
                        <a style="font-weight:bold; font-size:30px" class="nav-link text-dark">
                            <input type="submit" style="border: none; background-color: transparent"
                                   value="@Model.featuredFoodLeisure[0].name" />
                        </a>
                        <p style="font-size:20px">@Model.featuredFoodLeisure[0].description</p>
                    </div>
                }
            </div>
            @* for loop to go through the rest of the featured items to be displayed *@
            @for (int i = 1; i < Model.featuredFoodLeisure.Count; i++)
            {
                <div class="carousel-item">
                    @using (Html.BeginForm("SpecificFoodLeisure", "FoodLeisure"))
                    {
                        <input type="hidden" name="FoodLeisureID" value="@Model.featuredFoodLeisure[i].foodleisure_id" />
                        <img class="d-block w-100" src=@Url.Content(@Model.featuredFoodLeisure[i].foodleisure_image) alt="@Model.featuredFoodLeisure[i].name">
                        <div class="carousel-caption d-none d-md-block" style="background-color: grey; opacity: 0.8;">
                            <a style="font-weight:bold; font-size:30px" class="nav-link text-dark">
                                <input type="submit" style="border: none; background-color: transparent"
                                       value="@Model.featuredFoodLeisure[i].name" />
                            </a>
                            <p>@Model.featuredFoodLeisure[i].description</p>
                        </div>
                    }
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!---Banner end-->
    <br/>
    <br />

    <div class="card">
        <div class="card-body">

            <h2 style="color: #0b65a1;">Search For Things to Do!</h2>
            @using (Html.BeginForm("SpecificFoodLeisure", "FoodLeisure"))
            {
                <input type="number" name="FoodLeisureID" />
                <br /><br />

                <input type="submit" value="Go Specific View" />
            }
            <br />
        </div>
    </div>
    <br/>
    <br />
    <ul class="nav nav-tabs" id="myTab" role="tablist" style="background-color: #fff9d9;">
        <li class="nav-item">
            <a class="nav-link active" id="restaurants-tab" data-toggle="tab" href="#restaurants" role="tab"
               aria-controls="restaurants" aria-selected="true">Restaurants</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="hawkers-tab" data-toggle="tab" href="#hawkers" role="tab" aria-controls="hawkers"
               aria-selected="false">Local Food (Hawkers)</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="attractions-tab" data-toggle="tab" href="#attractions" role="tab"
               aria-controls="attractions" aria-selected="false">Tourist Attractions</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="restaurants" role="tabpanel" aria-labelledby="restaurants-tab">
            <br />
            <h2>Restaurants</h2>
            <br />
            <div class="row">
                @foreach (FoodLeisure foodLeisure in Model.restaurants)
                {
                    <div class="col-sm-4">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@Url.Content(@foodLeisure.foodleisure_image)"
                                 alt="@foodLeisure.name">
                            <div class="card-body">
                                <h5 class="card-title">@foodLeisure.name</h5>
                                <p>Contact Number: @foodLeisure.contact_num</p>
                                <p>Visit Reservation Page: <a href="@foodLeisure.website_link">HERE!</a></p>
                                @using (Html.BeginForm("SpecificFoodLeisure", "FoodLeisure"))
                                {

                                    @Html.Hidden("FoodLeisureID", (int)foodLeisure.foodleisure_id)

                                    <input type="submit" value="Go Specific View" style="background-color: #fff9d9;" />
                                }

                            </div>
                        </div>
                        <br />
                    </div>
                }

                <br />
            </div>
        </div>

        <div class="tab-pane fade" id="hawkers" role="tabpanel" aria-labelledby="hawkers-tab">
            <br />
            <h2>Hawkers</h2>
            <br />
            <div class="row">
                @foreach (FoodLeisure foodLeisure in Model.hawkers)
                {
                    <div class="col-sm-4">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@Url.Content(@foodLeisure.foodleisure_image)"
                                 alt="@foodLeisure.name">
                            <div class="card-body">
                                <h5 class="card-title">@foodLeisure.name</h5>
                                <p>Contact Number: @foodLeisure.contact_num</p>
                                <p>Visit Reservation Page: <a href="@foodLeisure.website_link">HERE!</a></p>
                                @using (Html.BeginForm("SpecificFoodLeisure", "FoodLeisure"))
                                {

                                    @Html.Hidden("FoodLeisureID", (int)foodLeisure.foodleisure_id)

                                    <input type="submit" value="Go Specific View" style="background-color: #fff9d9;" />
                                }

                            </div>
                        </div>
                        <br />
                    </div>
                }

                <br />
            </div>

        </div>
        <div class="tab-pane fade" id="attractions" role="tabpanel" aria-labelledby="attractions-tab">
            <br />
            <h2>Places Of Interest</h2>
            <br />
            <div class="row">
                @foreach (FoodLeisure foodLeisure in Model.pois)
                {
                    <div class="col-sm-4">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@Url.Content(@foodLeisure.foodleisure_image)"
                                 alt="@foodLeisure.name">
                            <div class="card-body">
                                <h5 class="card-title">@foodLeisure.name</h5>
                                <p>Contact Number: @foodLeisure.contact_num</p>
                                <p>Visit Reservation Page: <a href="@foodLeisure.website_link">HERE!</a></p>
                                @using (Html.BeginForm("SpecificFoodLeisure", "FoodLeisure"))
                                {

                                    @Html.Hidden("FoodLeisureID", (int)foodLeisure.foodleisure_id)

                                    <input type="submit" value="Go Specific View" style="background-color: #fff9d9;" />
                                }

                            </div>
                        </div>
                        <br />
                    </div>
                }

                <br />
            </div>


        </div>
    </div>




</body>

</html>
