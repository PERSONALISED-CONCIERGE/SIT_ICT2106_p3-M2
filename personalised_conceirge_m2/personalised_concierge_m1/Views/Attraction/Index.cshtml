var mbs = new google.maps.LatLng(1.2847, 103.8610);
var gardenbay = new google.maps.LatLng(1.2816, 103.8636);
var orchidgarden = new google.maps.LatLng(1.3127, 103.8137);
var marinabarage = new google.maps.LatLng(1.2807, 103.8711);
var artscience = new google.maps.LatLng(1.2863, 103.8593);
var myOptions = {
center: myLatlng,
zoom: 12,
mapTypeId: google.maps.MapTypeId.ROADMAPe
};



var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
var marker = new google.maps.Marker({
position: myLatlng,
title: "lat: " + lat + " long: " + long
});
var marker2 = new google.maps.Marker({
position: sentosa,
title: "lat: " + lat + " long: " + long
});
var marker3 = new google.maps.Marker({
position: changiairport,
title: "lat: " + lat + " long: " + long
});
var marker4 = new google.maps.Marker({
position: jurongbirdpark,
title: "lat: " + lat + " long: " + long
});
var marker5 = new google.maps.Marker({
position: zoo,
title: "lat: " + lat + " long: " + long
});
var marker6 = new google.maps.Marker({
position: mbs,
title: "lat: " + lat + " long: " + long
});
var marker7 = new google.maps.Marker({
position: gardenbay,
title: "lat: " + lat + " long: " + long
});
var marker8 = new google.maps.Marker({
position: orchidgarden,
title: "lat: " + lat + " long: " + long
});
var marker9 = new google.maps.Marker({
position: marinabarage,
title: "lat: " + lat + " long: " + long
});
var marker10 = new google.maps.Marker({
position: artscience,
title: "lat: " + lat + " long: " + long
});
marker.setMap(map);
marker2.setMap(map);
marker3.setMap(map);
marker4.setMap(map);
marker5.setMap(map);
marker6.setMap(map);
marker7.setMap(map);
marker8.setMap(map);
marker9.setMap(map);
marker10.setMap(map);
var infowindow = new google.maps.InfoWindow({  content: "<b>My Current Location</b><br/> Latitude:"+lat+"<br /> Longitude:"+long+""});
infowindow.open(map, marker);
var infowindow2 = new google.maps.InfoWindow({ content: "Universal Studios" });
infowindow2.open(map, marker2);
var infowindow3 = new google.maps.InfoWindow({ content: "Changi Airport" });
infowindow3.open(map, marker3);
var infowindow4 = new google.maps.InfoWindow({ content: "Jurong Bird Park" });
infowindow4.open(map, marker4);
var infowindow5 = new google.maps.InfoWindow({ content: "Singapore Zoo" });
infowindow5.open(map, marker5);
