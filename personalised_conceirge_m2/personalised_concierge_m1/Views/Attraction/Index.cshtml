infowindow8.open(map, marker8);
var infowindow9 = new google.maps.InfoWindow({ content: "Marina Barrage" });
infowindow9.open(map, marker9);
var infowindow10 = new google.maps.InfoWindow({ content: "Art Science Museum" });
infowindow10.open(map, marker10);
}
</script>
</head>
<body >
<h3>My Current Location</h3>
<form id="form1" runat="server">
<div id="map_canvas" style="width: 500px; height: 400px"></div>
<asp:Label ID="Long" runat="server" Text=""></asp:Label>
<asp:Label ID="Lat" runat="server" Text=""></asp:Label>
</form>
<h3>Distance to Suggested Location</h3>
<p>Current Location to Sentosa : @ViewBag.Sentosa miles</p>
<p>Current Location to Changi Airport : @ViewBag.Changi miles</p>


</body>
</html>